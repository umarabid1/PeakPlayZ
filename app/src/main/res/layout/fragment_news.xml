<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_galaxy_purple">

    <!-- Top Headlines Header Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/top_headlines_header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/top_headlines_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="Top Headlines"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Headlines Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headlines_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/button_color"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_headlines_header_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/headline_1"
                style="@style/HeadlineText"
                android:text="@string/headline_1" />

            <TextView
                android:id="@+id/headline_2"
                style="@style/HeadlineText"
                android:text="@string/headline_2" />

            <TextView
                android:id="@+id/headline_3"
                style="@style/HeadlineText"
                android:text="@string/headline_3" />

            <TextView
                android:id="@+id/headline_4"
                style="@style/HeadlineText"
                android:text="@string/headline_4" />

            <TextView
                android:id="@+id/headline_5"
                style="@style/HeadlineText"
                android:text="@string/headline_5" />

            <TextView
                android:id="@+id/headline_6"
                style="@style/HeadlineText"
                android:text="@string/headline_6" />

            <TextView
                android:id="@+id/headline_7"
                style="@style/HeadlineText"
                android:text="@string/headline_7" />

            <TextView
                android:id="@+id/headline_8"
                style="@style/HeadlineText"
                android:text="@string/headline_8" />

            <TextView
                android:id="@+id/headline_9"
                style="@style/HeadlineText"
                android:text="@string/headline_9" />

            <TextView
                android:id="@+id/headline_10"
                style="@style/HeadlineText"
                android:text="@string/headline_10" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout> 
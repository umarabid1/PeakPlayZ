<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/light_galaxy_purple">

    <!-- Leagues Header Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/leaguesHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_button"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/leagues_header"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <TableLayout
        android:id="@+id/buttonGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:stretchColumns="*"
        app:layout_constraintTop_toBottomOf="@id/leaguesHeader">

        <TableRow android:layout_width="match_parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button1"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:text="@string/league_1"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:text="@string/league_2"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:text="@string/league_3"/>
        </TableRow>

        <TableRow android:layout_width="match_parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button4"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:text="@string/league_4"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button5"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:text="@string/league_5"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button6"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:text="@string/league_6"/>
        </TableRow>

        <TableRow android:layout_width="match_parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button7"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:text="@string/league_7"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button8"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:text="@string/league_8"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button9"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:text="@string/league_9"/>
        </TableRow>

    </TableLayout>

    <!-- Top Headlines Header Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headlinesHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_button"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonGrid">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/headlines_header"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Headlines Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/headlinesHeader">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headline_1"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headline_2"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headline_3"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headline_4"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headline_5"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headline_6"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headline_7"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headline_8"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headline_9"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/headline_10"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <!-- Add contentDescription to images -->
    <!-- Remove this ImageView if not needed -->
    <ImageView
        android:id="@+id/someImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 
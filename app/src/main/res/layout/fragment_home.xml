<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/light_galaxy_purple">

    <!-- Leagues Header Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/leaguesHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_button"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/leagues_header"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <TableLayout
        android:id="@+id/buttonGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:stretchColumns="*"
        app:layout_constraintTop_toBottomOf="@id/leaguesHeader">

        <TableRow android:layout_width="match_parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button1"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:icon="@drawable/ic_nfl"
                app:iconGravity="textStart"
                app:iconSize="115dp"
                app:iconTint="@null"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:icon="@drawable/ic_nba"
                app:iconGravity="textStart"
                app:iconSize="100dp"
                app:iconTint="@null"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:icon="@drawable/ic_mlb"
                app:iconGravity="textStart"
                app:iconSize="70dp"
                app:iconTint="@null"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button4"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:icon="@drawable/ic_nhl"
                app:iconGravity="textStart"
                app:iconSize="100dp"
                app:iconTint="@null"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button5"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:icon="@drawable/ic_ufc"
                app:iconGravity="textStart"
                app:iconSize="115dp"
                app:iconTint="@null"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button6"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:icon="@drawable/ic_epl"
                app:iconGravity="textStart"
                app:iconSize="100dp"
                app:iconTint="@null"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>
        </TableRow>

        <TableRow android:layout_width="match_parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button7"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:icon="@drawable/ic_bl"
                app:iconGravity="textStart"
                app:iconSize="65dp"
                app:iconTint="@null"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button8"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:icon="@drawable/ic_seriea"
                app:iconGravity="textStart"
                app:iconSize="80dp"
                app:iconTint="@null"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button9"
                style="@style/CircularButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                app:icon="@drawable/ic_mls"
                app:iconGravity="textStart"
                app:iconSize="80dp"
                app:iconTint="@null"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"/>
        </TableRow>

    </TableLayout>

    <!-- Top Headlines Header Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headlinesHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_button"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonGrid">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/top_headlines_header"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Headlines Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/headlinesHeader">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▶ Lakers defeat Warriors 121-115 in overtime thriller"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▶ Manchester City tops Premier League after 3-0 win"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▶ Chiefs secure playoff spot with victory over Raiders"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▶ Bayern Munich advances in Champions League"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▶ Yankees sign star pitcher to record-breaking deal"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▶ Connor McDavid scores hat-trick in Oilers win"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▶ UFC 300 main event announced for April"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▶ Inter Milan extends unbeaten streak to 15 games"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▶ Dortmund signs promising young striker"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="▶ MLS announces expansion team for 2026"
            android:padding="4dp"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 
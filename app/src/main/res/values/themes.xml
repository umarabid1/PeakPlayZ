<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PeakPlayz" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Bottom Navigation style -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Theme.PeakPlays.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PeakPlays.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.PeakPlays.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="itemIconSize">28dp</item>
        <item name="itemPaddingTop">4dp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.App.BottomNavigation</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.App.BottomNavigation</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemPaddingBottom">0dp</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemBackground">@null</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:spacing">16dp</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/button_color</item>
        <item name="colorOnSurface">@android:color/white</item>
    </style>

    <style name="TextAppearance.App.BottomNavigation" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>